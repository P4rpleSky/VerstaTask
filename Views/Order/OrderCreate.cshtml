@model VerstaTask.Models.Dtos.OrderDto


<form asp-action="OrderCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Создать заказ</h1>

        <hr />
        <div class="row">
            <br />
            <h3 class="text-primary">Отправитель</h3>
            <div class="col-2">
                <label asp-for="SenderCity" class="control-label pt-2" style="font-size:20px;">Город</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="SenderCity"  class="form-control" />
                <span asp-validation-for="SenderCity" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="SenderStreet" class="control-label pt-2" style="font-size:20px;">Улица</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="SenderStreet"  class="form-control" />
                <span asp-validation-for="SenderStreet" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="SenderHouseNumber" class="control-label pt-2" style="font-size:20px;">Номер дома</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="SenderHouseNumber"  class="form-control" />
                <span asp-validation-for="SenderHouseNumber" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="SenderCaseNumber" class="control-label pt-2" style="font-size:20px;">Корпус</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="SenderCaseNumber"  class="form-control" />
                <span asp-validation-for="SenderCaseNumber" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="SenderFlatNumber" class="control-label pt-2" style="font-size:20px;">Квартира</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="SenderFlatNumber"  class="form-control" />
                <span asp-validation-for="SenderFlatNumber" class="text-danger"></span>
            </div>

            <br />
            <h3 class="text-primary">Получатель</h3>
            <div class="col-2">
                <label asp-for="RecipientCity" class="control-label pt-2" style="font-size:20px;">Город</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RecipientCity"  class="form-control" />
                <span asp-validation-for="RecipientCity" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="RecipientStreet" class="control-label pt-2" style="font-size:20px;">Улица</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RecipientStreet"  class="form-control" />
                <span asp-validation-for="RecipientStreet" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="RecipientHouseNumber" class="control-label pt-2" style="font-size:20px;">Номер дома</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RecipientHouseNumber"  class="form-control" />
                <span asp-validation-for="RecipientHouseNumber" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="RecipientCaseNumber" class="control-label pt-2" style="font-size:20px;">Корпус</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RecipientCaseNumber"  class="form-control" />
                <span asp-validation-for="RecipientCaseNumber" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="RecipientFlatNumber" class="control-label pt-2" style="font-size:20px;">Квартира</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RecipientFlatNumber"  class="form-control" />
                <span asp-validation-for="RecipientFlatNumber" class="text-danger"></span>
            </div>

            <br />
            <h3 class="text-primary">Данные о грузе</h3>
            <div class="col-2">
                <label asp-for="CargoWeightStr" class="control-label pt-2" style="font-size:20px;">Вес, кг</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CargoWeightStr" type="number" class="form-control" />
                <span asp-validation-for="CargoWeightStr" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="PickupDate" class="control-label pt-2" style="font-size:20px;">Дата забора груза</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PickupDate"  class="form-control" />
                <span asp-validation-for="PickupDate" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="OrderIndex" class="btn-primary btn form-control ">Назад к списку</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Создать" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}